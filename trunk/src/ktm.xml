<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd  ">

<struts>
  <package name="ktm-default" extends="struts-default" namespace="/">
    <interceptors>
      <interceptor name="ktmlogging"
        class="org.ktm.interceptor.KTMLoggingInterceptor">
      </interceptor>
      <interceptor name="ktmauthen"
        class="org.ktm.interceptor.AuthorizationInterceptor">
      </interceptor>
      <interceptor-stack name="loggingStack">
        <interceptor-ref name="ktmlogging" />
        <interceptor-ref name="defaultStack" />
      </interceptor-stack>
    </interceptors>
    <global-results>
      <result name="logon">/WEB-INF/content/pages/logon.jsp</result>
      <result name="unauthorized">/WEB-INF/content/pages/unauthorized.jsp</result>
    </global-results>
  </package>
  <package name="ktm-flow" extends="ktm-default,tiles-default">
  </package>
  <package name="ktm-process" extends="ktm-flow,hibernate-default">
  </package>
  <package name="ktm-json" extends="ktm-flow,json-default">
  </package>
  
  <package name="ktm-test" extends="struts-default,tiles-default,json-default,hibernate-default">
  </package>
</struts>
